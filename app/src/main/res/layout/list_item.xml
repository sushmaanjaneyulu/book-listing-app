<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/xsmall"
    android:paddingLeft="@dimen/xsmall"
    android:paddingRight="@dimen/xsmall"
    android:paddingStart="@dimen/xsmall"
    android:layout_marginTop="@dimen/small"
    android:layout_marginBottom="@dimen/small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginStart="@dimen/small"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="3"
            android:textAllCaps="true"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/font_xsmall"
            tools:text="The Art Book Tradition in Twentieth-century Europe" />

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/font_xsmall"
            tools:text="Art" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/font_small"
            tools:text="Exploring various ways in which a range of twentieth-century European artists and writers challenged the boundary between visual and linguistic expression in the content, production and physical form of books, these essays challenge the" />

        <TextView
            android:id="@+id/author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/font_xsmall"
            android:layout_marginBottom="@dimen/small"
            tools:text="Routledge" />

        <View
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="@dimen/divider"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/small"
        android:layout_marginStart="@dimen/small"
        android:layout_marginRight="@dimen/small"
        android:layout_marginEnd="@dimen/small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/firstLetter"
            android:textColor="@android:color/white"
            android:paddingTop="@dimen/small"
            android:paddingBottom="@dimen/small"
            android:paddingLeft="@dimen/medium"
            android:paddingRight="@dimen/medium"
            android:background="@color/colorAccent"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>